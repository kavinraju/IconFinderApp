<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <!-- TODO: Need to change this model type-->
        <variable
            name="model"
            type="com.srilasaka.iconfinderapp.local_database.icon_set_table.IconSetsEntry" />

        <variable
            name="viewModel"
            type="com.srilasaka.iconfinderapp.ui.iconset_details.IconSetDetailsFragmentViewModel" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".ui.iconset_details.IconDetailsFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include
                android:id="@+id/layout_basic_details"
                layout="@layout/layout_basic_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:model="@{viewModel.basicDetailsModel}" />

            <include
                android:id="@+id/load_state_view_item"
                layout="@layout/load_state_view_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layout_basic_details" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_iconset_icons_list"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_0dp"
                android:layout_margin="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_16dp"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:layout_constraintEnd_toEndOf="@id/layout_basic_details"
                app:layout_constraintStart_toStartOf="@id/layout_basic_details"
                app:layout_constraintTop_toBottomOf="@id/layout_basic_details"
                app:spanCount="2"
                tools:itemCount="20"
                tools:listitem="@layout/recycler_item_icons" />

            <include
                android:id="@+id/no_data_view_item"
                layout="@layout/no_data_view_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_16dp"
                app:layout_constraintEnd_toEndOf="@id/layout_basic_details"
                app:layout_constraintStart_toStartOf="@id/layout_basic_details"
                app:layout_constraintTop_toBottomOf="@id/layout_basic_details" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>