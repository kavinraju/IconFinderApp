<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- CollapsingToolbar Title-->
    <style name="TextAppearance.App.CollapsingToolbar.Expanded" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.App.CollapsingToolbar.Collapsed" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- MaterialToolBarTheme -->
    <style name="MaterialToolBarTheme" parent="@style/Widget.MaterialComponents.ActionBar.PrimarySurface">
        <item name="colorControlHighlight">@color/ripple_color_grey</item>
    </style>

    <!-- TabLayout -->
    <style name="Widget.App.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabIndicator">@drawable/tab_indicator</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabMode">auto</item>
        <item name="layout_collapseMode">pin</item>
        <item name="tabIndicatorHeight">@dimen/tab_indicator_height</item>
        <item name="android:background">@color/white</item>
        <item name="tabPaddingBottom">-15dp</item>

        <item name="tabTextColor">@color/text_color</item>
        <item name="tabSelectedTextColor">@color/text_color</item>
    </style>

    <style name="Widget.App.TabLayout.Title" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="titleTextStyle">@style/TextAppearance.MaterialComponents.Headline6</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
        <item name="fontFamily">@font/font_family_montserrat</item>
    </style>

    <!-- Buttons -->
    <style name="Widget.App.Button.UnelevatedButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="backgroundTint">@color/button_color</item>
        <item name="textAllCaps">false</item>
        <item name="iconGravity">textStart</item>
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Subtitle1
        </item>
    </style>

    <style name="Widget.App.Button.UnelevatedButton.IconDetailsScreen" parent="Widget.App.Button.UnelevatedButton">
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="backgroundTint">@color/button_color</item>
        <item name="textAllCaps">false</item>
        <item name="android:insetTop">@dimen/dimen_0dp</item>
        <item name="android:insetBottom">@dimen/dimen_0dp</item>
        <item name="iconSize">@dimen/dimen_16dp</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/dimen_10dp</item>
    </style>

</resources>